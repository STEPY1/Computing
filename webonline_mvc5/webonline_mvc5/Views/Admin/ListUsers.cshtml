@model IEnumerable<webonline_mvc5.Models.tbl_user>

@{
    ViewBag.Title = "List Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container ">
    <h2 class="text-center"><strong>List Users</strong></h2>

    @*<p>
        <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">Create New User</a>
    </p>*@

    <table class="table table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.u_id</td>
                    <td>@user.u_name</td>
                    <td>@user.u_email</td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.u_id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.u_id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
