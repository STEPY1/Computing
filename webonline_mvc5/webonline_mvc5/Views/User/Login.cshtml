@model webonline_mvc5.Models.tbl_user
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <br />
    <br />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">Login</div>
                    <div class="card-body">
                        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                @Html.LabelFor(m => m.u_email, "Email", new { @class = "form-label" }) <!-- Thay đổi đây -->
                                @Html.TextBoxFor(m => m.u_email, new { @class = "form-control", placeholder = "Enter your email" })
                                @Html.ValidationMessageFor(m => m.u_email, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.u_password, "Password", new { @class = "form-label" }) <!-- Thay đổi đây -->
                                @Html.PasswordFor(m => m.u_password, new { @class = "form-control", placeholder = "Enter your password" })
                                @Html.ValidationMessageFor(m => m.u_password, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-danger">Login</button>
                        }
                        <div class="mt-3">
                            <p>Don't have an account? <a href="@Url.Action("Register", "User")">Register here</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
</body>
</html>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
