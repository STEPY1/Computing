@model IEnumerable<webonline_mvc5.Models.product>

@{
    ViewBag.Title = "View Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2 {
        text-align: center;
        color: #3482A3;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>

<div class="container">
    <h2 class="text-danger">View Products</h2>
    <table class="table table-striped">
        <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-primary">Create New Product</a>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.pro_id</td>
                    <td>@product.pro_name</td>
                    <td>@product.pro_price</td>
                    <td>@product.category.cat_name</td>
                    <td>@product.pro_desc</td>
                    <td><img src="@Url.Content(product.pro_image)" alt="@product.pro_name" style="max-height: 100px;" /></td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "EditProduct", new { id = product.pro_id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Delete", "DeleteProduct", new { id = product.pro_id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this product?');" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
